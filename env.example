# ======================================
# RentoH Environment Configuration
# ======================================
# Copy this file to .env.local and fill in your actual values

# ======================================
# REQUIRED: Supabase Configuration
# ======================================
# Get these from: https://app.supabase.com/project/_/settings/api
# 
# Without these values, authentication and database features will not work.
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Optional: JWT secret for token verification
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ======================================
# Optional: Captcha Configuration
# ======================================
# Configure if enabling server-side captcha verification
CAPTCHA_PROVIDER=turnstile
CAPTCHA_SECRET=your-captcha-secret

# ======================================
# Site Configuration
# ======================================
# The canonical URL of your site
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ======================================
# OPTIONAL Features
# ======================================
# Mapbox token for maps: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_TOKEN=

# Email configuration
EMAIL_FROM_ADDRESS=noreply@rento.example

# Storage bucket name
SUPABASE_STORAGE_BUCKET_LISTINGS=listings
NEXT_PUBLIC_SUPABASE_BUCKET_LISTINGS=listings
NEXT_PUBLIC_SUPABASE_BUCKET_AVATARS=
