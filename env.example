# Supabase Configuration
# Get these from your Supabase project settings: https://app.supabase.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Server-only Supabase key (NEVER expose client-side)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Optional: JWT secret for token verification
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://rento-h.vercel.app

# Optional: Mapbox for maps
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token-here

# Optional: Email configuration
EMAIL_FROM_ADDRESS=noreply@rento.example

# Storage bucket name (default: listing-media)
SUPABASE_STORAGE_BUCKET_LISTINGS=listing-media
